    "type":           "aws_acm_certificate",
    "values": {
      "arn":         "arn:aws:acm:us-east-1:753646501470:certificate/1f485f70-2bc1-4ae3-a30f-a533605e99b9",
      "domain":      "cam-vault.hashydemos.io",
      "id":          "2020-03-25 16:37:53.939547607 +0000 UTC",
      "key_types":   null,
