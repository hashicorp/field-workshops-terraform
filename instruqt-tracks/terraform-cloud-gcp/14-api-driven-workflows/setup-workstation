#!/bin/bash -l
set -e

mkdir /root/hashicat-gcp/json
cd /root/hashicat-gcp/json
set-workdir /root/hashicat-gcp/json

# Create some payload files for the student
for VAR in placeholder width height; do
cat <<-EOF > /root/hashicat-gcp/json/var-${VAR}.json
{
  "data": {
    "type":"vars",
    "attributes": {
      "key":"${VAR}",
      "value":"REPLACE_ME",
      "category":"terraform",
      "hcl":false,
      "sensitive":false
    }
  }
}
EOF
done

# Create the payload for the plan/apply
cat <<-EOF > /root/hashicat-gcp/json/apply.json
{
  "data": {
    "attributes": {
      "is-destroy":false,
      "message": "HCP Terraform API is Magic! ü¶Ñ üåà üßô‚Äç‚ôÇÔ∏è"
    },
    "type":"runs",
    "relationships": {
      "workspace": {
        "data": {
          "type": "workspaces",
          "id": "REPLACE_WITH_WORKSPACE_ID"
        }
      }
    }
  }
}
EOF

exit 0
